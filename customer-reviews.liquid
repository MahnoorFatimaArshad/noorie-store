<section class="customer-reviews-wrapper" id="customer-reviews">
  <div class="container">
    <div class="customer-reviews-slider">
      {% for block in section.blocks %}
        <div class="testimonial-slide">
          <div class="customer-review-card">
            <div class="border-ring-review"></div>
            <div class="card-inner">
              <div class="top-row">
                <img 
                  src="{{ block.settings.image | img_url: '150x150' | default: 'https://via.placeholder.com/150' }}" 
                  alt="{{ block.settings.name | default: 'Customer' }}">
                <div class="info">
                  <h3 class="name">{{ block.settings.name }}</h3>
                  <p class="designation">{{ block.settings.designation | default: 'Customer' }}</p>
                </div>
              </div>
              <p class="feedback">“{{ block.settings.feedback }}”</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.customer-reviews-wrapper {
  padding: 60px 20px;
  background: white;
  color: #000;
  text-align: center;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
}

.section-heading {
  font-size: 3.5rem;
  color: #E72FAA;
  margin-bottom: 50px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.customer-reviews-slider {
  display: flex !important;
  justify-content: center;
  align-items: stretch;
}

.testimonial-slide {
  margin: 0 20px;
  box-sizing: border-box;
}

.customer-review-card {
  position: relative;
  width: 360px;
  border: 2px solid #E72FAA;
  border-radius: 16px;
  padding: 20px;
  background: transparent;
}

.border-ring-review {
  position: absolute;
  top: -6px;
  left: -6px;
  width: 342px;
  height: 382px;
  border-radius: 16px;
  border: 2px solid transparent;
  border-top-color: #E72FAA;
  border-right-color: #E72FAA;
  border-bottom-color: #FFD700;
  border-left-color: #FFD700;
  animation: rotate-border 4s linear infinite;
  z-index: 0;
  pointer-events: none;
}

@keyframes rotate-border {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Inner Content */
.card-inner {
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
  border-radius: 16px;
  padding: 30px 20px;
  z-index: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
}

/* Top row: image + name + designation */
.top-row {
  display: flex;
  align-items: center;
  gap: 15px;
}

.top-row img {
  width: 70px;
  height: 70px;
  object-fit: cover;
  border-radius: 50%;
  border: 2px solid #000;
}

.info {
  text-align: left;
}

.name {
  font-size: 1.6rem;
  font-weight: bold;
  color: #E72FAA;
  margin: 0;
}

.designation {
  font-size: 1.2rem;
  color: #888;
  margin: 4px 0 0;
}

.feedback {
  font-size: 1.3rem;
  color: #0EB8E2;
  font-style: italic;
  line-height: 1.5;
  text-align: center;
  margin: 0;
}

/* Dots */
.slick-dots {
  margin-top: 20px;
  list-style: none;
  display: flex !important;
  justify-content: center;
  gap: 10px;
}

.slick-dots li button:before {
  font-size: 12px;
  color: #E72FAA;
  opacity: 0.6;
}

.slick-dots li.slick-active button:before {
  color: #FFD700;
  opacity: 1;
}

/* Responsive */
@media (max-width: 768px) {
  .customer-review-card {
    width: 100%;
  }

  .card-inner {
    padding: 20px 15px;
  }

  .top-row img {
    width: 60px;
    height: 60px;
  }

  .name {
    font-size: 1.4rem;
  }

  .designation {
    font-size: 1.1rem;
  }

  .feedback {
    font-size: 1.2rem;
  }

  .section-heading {
    font-size: 2.2rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  if (typeof jQuery !== 'undefined' && typeof jQuery.fn.slick !== 'undefined') {
    $('#customer-reviews .customer-reviews-slider').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 3000,
      arrows: false,
      dots: true,
      responsive: [
        {
          breakpoint: 1024,
          settings: { slidesToShow: 2 }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            centerMode: true,
            centerPadding: '20px'
          }
        }
      ]
    });
  }
});
</script>

{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Customer Reviews"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "Jane Doe"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Happy Customer"
        },
        {
          "type": "textarea",
          "id": "feedback",
          "label": "Customer Feedback",
          "default": "Absolutely loved the product! High quality and quick delivery."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews",
      "category": "Custom"
    }
  ]
}
{% endschema %}
