<section class="square-testimonials" id="reviews">
  <div class="container">
    <div class="square-testimonials-slider">
      {% for block in section.blocks %}
        <div class="testimonial-slide">
          <div class="square-card">
            <div class="border-ring"></div>
            <div class="square-inner">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '150x150' }}" alt="{{ block.settings.name }}">
              {% else %}
                <img src="https://via.placeholder.com/150" alt="Customer">
              {% endif %}
              <h3 class="name">{{ block.settings.name }}</h3>
              <p class="feedback">“{{ block.settings.feedback }}”</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.square-testimonials {
  padding: 60px 20px;
  background: #E7E4E4;
  color: #000;
  text-align: center;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
}

.section-heading {
  font-size: 3.5rem;
  color: #E72FAA;
  margin-bottom: 50px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Slick Slider */
.square-testimonials-slider {
  display: flex !important;
  justify-content: center;
  align-items: stretch;
  gap: 20px;
}

.testimonial-slide {
  display: flex !important;
  justify-content: center;
}

.slick-slide {
  display: flex !important;
  justify-content: center;
  align-items: center;
}

.square-card {
  position: relative;
  width: 270px;
  height: 320px;
  background: #fff;
  padding: 30px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 12px;
  border: 2px solid #E72FAA;
  box-shadow: 0 6px 15px rgba(231, 47, 170, 0.1);
}

.border-ring {
  position: absolute;
  top: -6px;
  left: -6px;
  width: 282px;
  height: 332px;
  border-radius: 16px;
  border: 2px solid transparent;
  border-top-color: #E72FAA;
  border-right-color: #E72FAA;
  border-bottom-color: #FFD700;
  border-left-color: #FFD700;
  animation: rotate-border 4s linear infinite;
  z-index: 0;
  pointer-events: none;
  box-sizing: border-box;
}

@keyframes rotate-border {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.square-inner {
  position: relative;
  z-index: 1;
  background: white;
  width: 210px;
  height: 260px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
  text-align: center;
  color: #000;
  box-shadow: 0 0 8px rgba(0,0,0,0.05);
  border-radius: 10px;
  overflow:hidden;
}

.square-inner img {
  width: 90px;
  height: 90px;
  object-fit: cover;
  border-radius: 50%;
  border: 2px solid #000;
  margin-bottom: 10px;
}

.name {
  font-size: 1.8rem;
  font-weight: 700;
  color: #E72FAA;
  margin-bottom: 10px;
}

.feedback {
  font-size: 1.4rem;
  color: #0EB8E2;
  line-height: 1.6;
  margin: 0 auto;
  max-width: 90%;
  text-align: center;
  font-style: italic;
}

/* Slick arrows */
.slick-prev, .slick-next {
  background: #FFD700;
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  z-index: 20;
  display: flex !important;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.slick-prev {
  left: 5px;
}

.slick-next {
  right: 5px;
}

.slick-prev:hover,
.slick-next:hover,
.slick-prev:focus,
.slick-next:focus {
  background: #E72FAA;
  transform: translateY(-50%) scale(1.1);
}

.slick-prev:before,
.slick-next:before {
  color: white;
  font-size: 24px;
  opacity: 1;
}

/* Responsive */
@media (max-width: 768px) {
  .square-card {
    width: 240px;
    height: 290px;
    padding: 20px;
  }

  .border-ring {
    width: 252px;
    height: 302px;
  }

  .square-inner {
    width: 180px;
    height: 220px;
    padding: 15px;
  }

  .square-inner img {
    width: 65px;
    height: 65px;
  }

  .name {
    font-size: 1.5rem;
  }

  .feedback {
    font-size: 1.2rem;
  }

  .section-heading {
    font-size: 2.2rem;
  }

  .square-testimonials-slider {
    gap: 0;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof jQuery !== 'undefined' && typeof jQuery.fn.slick !== 'undefined') {
    $('.square-testimonials-slider').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 3000,
      arrows: true,
      dots: false,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            centerMode: true,
            centerPadding: '20px'
          }
        }
      ]
    });
  }
});
</script>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "Jane Doe"
        },
        {
          "type": "textarea",
          "id": "feedback",
          "label": "Customer Feedback",
          "default": "Absolutely loved the product! High quality and quick delivery."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Custom"
    }
  ]
}
{% endschema %}
