<section class="about-video-section" id="about-us">
  <div class="about-container">
    
    <!-- Text Content -->
    <div class="about-text">
      <h2 class="about-heading">{{ section.settings.heading }}</h2>
      <p class="about-description">{{ section.settings.description }}</p>
    </div>

    <!-- Video Content -->
    <div class="about-video">
      <iframe 
        src="{{ section.settings.video_url }}" 
        title="About Us Video"
        frameborder="0" 
        allowfullscreen>
      </iframe>
    </div>

  </div>
</section>

<style>
  .about-video-section {
    padding: 60px 30px;
    background-color:rgb(231, 228, 228);
    color: #FFFFFF;
    font-family: 'Segoe UI', sans-serif;
  }

  .about-container {
    max-width: 1200px;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 50px;
  }

  .about-heading {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    color:rgb(231, 47, 170);
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .about-description {
    font-size: 1.75rem;
    line-height: 1.8;
    color:rgb(14, 184, 226);
    max-width: 500px;
  }

  .about-video iframe {
    width: 100%;
    height: 320px;
    border: 4px solid #FFD700;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3);
  }

  @media (max-width: 992px) {
    .about-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .about-heading {
      font-size: 2.2rem;
    }

    .about-description {
      font-size: 1.1rem;
      margin-bottom: 30px;
    }

    .about-video iframe {
      height: 250px;
    }
  }
</style>

{% schema %}
{
  "name": "About Section with Video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Our Brand"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We design premium clothing, jewelry, and footwear blending tradition with modern style."
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "YouTube Video URL"    }
  ],
  "presets": [
    {
      "name": "About With Video",
      "category": "Custom"
    }
  ]
}
{% endschema %}
